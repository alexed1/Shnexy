echo "Cleaning..."
git clean -fdx
echo "Restoring nuget..."
mono .nuget/NuGet.exe restore Kwasant.sln

echo "Building test project..."
MONO_IOMAP=case xbuild Tests/KwasantTest/KwasantTest.csproj

echo "Restoring test .config file..."
cp Tests/KwasantTest/app.config Tests/KwasantTest/KwasantTest.config

echo "Installing nunit..."
mono .nuget/NuGet.exe install NUnit.Runners -Version 2.6.3

echo "Running tests..."
mono --debug --runtime=v4.0 NUnit.Runners.2.6.3/tools/nunit-console.exe Tests/KwasantTest/KwasantTest.csproj -config=Debug --labels