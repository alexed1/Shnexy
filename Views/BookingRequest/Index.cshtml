@model IEnumerable<EmailDO>*@

<h2>Index</h2>
<script src="~/Scripts/DataTables-1.10.0/media/js/jquery.dataTables.js"></script>
<link href="~/Content/DataTables-1.10.0/media/css/jquery.dataTables.css" rel="stylesheet" />

<table id="tblbookingrequest" class="table">
    <thead>
        <tr>
            <th>Body</th>
            <th>Subject</th>
            <th>From</th>
            <th style="width:15%">Action</th>
        </tr>
    </thead>
</table>

<script type="text/javascript">
    //Document ready function, will run after page is ready and all elements are loaded.
    $(document).ready(function () {
        //Ajax call to get all unprocessed booking request from server.
        $.getJSON("/BookingRequest/ShowUnprocessed", {}, showRequests);

        //Ajax call success function
        function showRequests(response) {
            //Initiating and providing the json object to Datatable to bind the table "tblbookingrequest" showing Body, Subject and From of the request.
            var table = $('#tblbookingrequest').DataTable({
                data: JSON.parse(response),
                columns: [
                    { data: 'body' },
                    { data: 'request.subject' },
                    { data: 'request.from.address' },
                    {
                      data: null,
                      defaultContent: "<button value='detail'>Details</button>&nbsp;&nbsp;<button value='invalid'>Invalid</button>"
                    }
                ],
            });

            //This function will bind a click function on every button in table "tblbookingrequest"
            $('#tblbookingrequest tbody').on('click', 'button', function () {
                var data = table.row($(this).parents('tr')).data();
                var parentcontrol = this;

                //checking clicked button value for appropriate action
                switch ($(this).val()) {
                    case "detail":
                        //redirecting to main calendar view for details
                        window.location.href = '@Url.Action("Details")' + "/" + data.request.id;
                        break;
                    case "invalid":
                        //setting status of booking request to "INVALID" and removing the row
                        $.ajax({
                            url: "/BookingRequest/SetStatus",
                            dataType: "json",
                            contentType: "application/json",
                            type: "GET",
                            data: { id: data.request.id, targetStatus: 'invalid' },
                            success: function (response) {
                                if (response.Name == "Success") {
                                    //removing the current row
                                    $(parentcontrol).parents('tr').remove();
                                }
                                else {
                                    alert(response.Message);
                                }
                            }
                        });
                        break;
                    default:
                        //generates an alert for invalid selection, generally it won't happen.
                        alert("Not a valid action!");
                }
            });
        }
    });
</script>
