@model KwasantWeb.ViewModels.ResetPasswordVM

@{
    ViewBag.Title = "Reset password confirmation";
}    

<div class="login-section col-md-5 status-message">
    <div class="wrapper">
        <h2 class="section-title with-border">@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="custom-form">
                    <p>Your password has been reset. Please @Html.ActionLink("click here to log in", "Index")</p>
                </div>
            </div>
        </div>
    </div>
</div>