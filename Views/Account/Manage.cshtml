@model KwasantWeb.ViewModels.ManageUserViewModel
@{
    ViewBag.Title = "Manage Account";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (!Model.GoogleCalendarAccessGranted)
        {
            @Html.ActionLink("Grant Access", "GrantGoogleCalendarAccess")
        }
        else
        {
            @Html.ActionLink("Forbid Access", "ForbidGoogleCalendarAccess")
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

