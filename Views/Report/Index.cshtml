<h2>@ViewBag.Title</h2>
<script src="~/Scripts/DataTables-1.10.0/media/js/jquery.dataTables.js"></script>
<link href="~/Content/DataTables-1.10.0/media/css/jquery.dataTables.css" rel="stylesheet" />

<nav class="navbar navbar-default top-toolbar-section" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<ul class="nav navbar-nav">
				<li><a id="last5minutes" href="#">Last 5 minutes</a></li>
				<li><a id="lasthour" href="#">Last Hour</a></li>
				<li><a id="lastday" href="#">Last Day</a></li>
				<li><a id="lastweek" href="#">Last Week</a></li>
				<li><a id="all" href="#">All</a></li>
			</ul>
		</div>
	</div>
</nav>

<table id="tblreport" class="data-table">
    <thead>
        <tr>
            <th style="width: 15%">Date</th>
            <th style="width: 15%">Primary Category</th>
            <th style="width: 15%">Secondary Category</th>
            <th style="width: 10%">Activity</th>
            <th style="width: 45%">Notes</th>
        </tr>
    </thead>
</table>

<table id="tblAllLogs" class="data-table">
    <thead>
        <tr>
            <th style="width: 15%">Date</th>
            <th style="width: 15%">Name</th>
            <th style="width: 15%">Level</th>
            <th style="width: 55%">Message</th>
        </tr>
    </thead>
</table>

<script type="text/javascript">
    //Document ready function, will run after page is ready and all elements are loaded.
    $(document).ready(function () {
        $('#tblAllLogs').hide();
        $('#tblreport').hide();
        
        updateTables();
    });
    
    function updateTables() {

        var queryPeriod = "all";
        var table;
        var columns;
        $('a#all').addClass('current');
        //Initializing columns defination for DataTable widget according to report type.
        switch ("@ViewBag.type") {
            case "incident":
                columns = [
                    {
                        data: function (data) {
                            return ConvertToDateString(data.create_time);
                        }
                    },
                    { data: 'primary_category' },
                    { data: 'secondary_category' },
                    { data: 'activity' },
                    { data: 'notes' }
                ];
                break;
            case "usage":
                columns = [
                    {
                        data: function (data) {
                            return ConvertToDateString(data.create_date);
                        }
                    },
                    { data: 'primary_category' },
                    { data: 'secondary_category' },
                    { data: 'activity' },
                    { data: 'data' }
                ];
                break;
            case "alllogs":
                columns = [
                    {
                        data: function (data) {
                            return ConvertToDateString(data.date);
                        }
                    },
                    { data: 'name' },
                    { data: 'level' },
                    { data: 'message' },
                ];
                break;
        }

        loadReport();

        //Inserts retrieved json records into DataTable Widget
        function showRequests(response) {
            var tableToWrite;// = $('#tblreport');
            var tableToHide;
            if ("@ViewBag.type" == "alllogs") {
                tableToWrite = $('#tblAllLogs');
                tableToHide = $('#tblreport');
            } else {
                tableToWrite = $('#tblreport');
                tableToHide = $('#tblAllLogs');
            }

            table = tableToWrite.DataTable({
                data: JSON.parse(response),
                order: [0, 'desc'],
                columns: columns,
            });
            tableToHide.hide();
            tableToWrite.show();
        }

        function loadReport() {
            //Ajax call to get report records from server.
            $.getJSON("/Report/ShowReport", { queryPeriod: queryPeriod, type: "@ViewBag.type" }, showRequests);
        }

        //Initializing click for all filter buttons.
        $('.top-toolbar-section a').click(function () {
            $('.top-toolbar-section a').each(function () {
                $(this).removeClass('current');
            });
            $(this).addClass('current');
            queryPeriod = $(this).attr("id");
            table.destroy();
            loadReport();
            return false;
        });
    }

    function ConvertToDateString(dateFormat) {
        var datevalue = new Date(dateFormat);
        var formate = "AM"; var hour = 0;
        if (datevalue.getHours() >= 12) {
            hour = parseInt(datevalue.getHours()) - 12;
            formate = "PM";
        } else {
            hour = datevalue.getHours();
            formate = "AM";
        }
        dateFormat = datevalue.getMonth() + 1 + "-" + datevalue.getDate() + "-" + datevalue.getFullYear().toString().substring(2, 4) + " " + hour + ":" + datevalue.getMinutes() +" " + formate;
        return dateFormat;

    }

</script>
