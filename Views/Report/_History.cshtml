	@Scripts.Render("~/bundles/js/select2")
	@Scripts.Render("~/bundles/js/jqueryvalidate")
	<script src="/Content/js/Kwasant/Popup.js"></script>
	<script src="~/Scripts/DataTables-1.10.0/media/js/jquery.dataTables.js"></script>
